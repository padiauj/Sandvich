<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sandvich"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sandvich.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sandvich.MakeSandwich"
            android:label="@string/title_activity_make_sandwich" >
        </activity>
        <activity
            android:name="com.example.sandvich.Drive"
            android:label="@string/title_activity_drive" >
        </activity>
        <activity
            android:name="com.example.sandvich.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>
	
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
</manifest>
