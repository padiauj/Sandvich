<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MakeSandwich" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your bread:"
            android:textAppearance="?android:attr/textAppearanceMedium" />
		<RadioGroup
		    android:id="@+id/breadGroup"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content">
		    
		    <RadioButton
            	android:id="@+id/wheatButton"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="Wheat" />

        	<RadioButton
            	android:id="@+id/whiteButton"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="White" />

        	<RadioButton
            	android:id="@+id/ryeButton"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="Rye" />
        	
		</RadioGroup>
        

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select other items:"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/roastBeefButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roast Beef" />

        <CheckBox
            android:id="@+id/veggieBurgerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veggie Burger" />

        <CheckBox
            android:id="@+id/turkeyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turkey" />

        <CheckBox
            android:id="@+id/lettuceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lettuce" />

        <CheckBox
            android:id="@+id/tomatoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomato " />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit your order" />

    </LinearLayout>

</RelativeLayout>
